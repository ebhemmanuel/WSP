doctype html
html
	head
		title Lecia Camera AG
		meta(charset="utf-8")
		meta(description="Mycamera website")
		meta(keywords="cage, boom, brim")
		meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")

		link(href="public/css/bootstrap.min.css" rel="stylesheet")
		link(href="public/css/bootstrap-theme.min.css" rel="stylesheet")
		link(href="public/css/application.css" rel="stylesheet")
		link(href="http://fonts.googleapis.com/css?family=Open Sans:300,300italic,regular,italic,600,600italic,700,700italic,800,800italic;" rel="stylesheet" type="text/css")

	body

		//- Header and Nav
		//- ___________________________.navbar-fixed-top
		nav.navbar.navbar-default.navbar-static-top(role="navigation")
					.container
						.navbar-header
							button.navbar-toggle(type="button")(data-toggle="collapse")(data-target=".navbar-collapse")
								span.sr-only Toggle navigation
								span.icon-bar
								span.icon-bar
								span.icon-bar
							a.navbar-brand(href="#")
								img(src="public/images/logo3.svg")

						.collapse.navbar-collapse
							ul.nav.navbar-nav.pull-right
								li
									a(href="index.html").active Home
								li
									a(href="products.html") Cameras
								li
									a(href="support.html") Support
								li
									a(href="signup.html") Sign Up

		//-Sign Up
		//-_______________
		.jumbotron.signup
			.container
				.row
					.col-md-4
					.col-md-3.jumbo
						form(role="form")
							.form-group
								label(for="fullname")
									| Full Name
								input#fullname.form-control(type="name")(placerholder="Full Name")
							.form-group
								label(for="email")
									| Email Address
								input#email.form-control(type="email")(placerholder="Enter email")
							.form-group
								label(for="password")
									| Password
								input#password.form-control(type="Password")(placerholder="Password")
							.form-group
								.col-sm-offset-2.col-sm-10
								button.btn.btn-default(type="submit")
									| Sign Up
		//-Footer
		//-___________________________
		#footer
			.container
				.row
					.col-sm-4
						p &copy; Copyright 2014 Leica Camera AG
					.col-sm-4.col-sm-offset-4
						ul.list-unstyled.footer
							li
								a(href="#") Terms of Use
							li
								a(href="#") Privacy
							li
								a(href="#") FAQ
							li
								a(href="contact.html") Contact Us

		script(src='public/js/jquery-1.11.1.min.js')
		script(src='public/js/bootstrap.min.js')
